[ui]
username = jalal <jalal@gnomedia.com>
merge = /usr/bin/diff3
editor = vim
ignore = ~/.hgignorerc

[extensions]
color =
convert =
# hgk = /usr/share/pyshared/hgext/hgk.py
# hggit = /usr/share/pyshared/hgext/git
rebase =
graphlog =
strip =
shelve =
pager =
# fsmonitor =
histedit =

[pager]
pager = LESS='FRX' less

[alias]
llog = log --limit 10
xlog = log --limit 30 --style compact -G

[tortoisehg]
editor = subl
tabwidth = 2
vdiff = /usr/bin/xxdiff
postpull = rebase
monitorrepo = always
ui.language = en_GB
authorcolor = True
